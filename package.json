{
  "name": "@shyzus/tchoutchou-mcp",
  "version": "1.0.2",
  "description": "MCP client for French trains search - Powered by Navitia API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tchoutchou-mcp": "dist/http-client.js"
  },
  "files": [
    "dist/http-client.js",
    "README.md"
  ],
  "keywords": ["mcp", "trains", "sncf", "navitia", "france", "transport", "chatgpt"],
  "author": "Rankorr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rankorr/tchoutchou-mcp"
  },
  "scripts": {
    "build": "tsc && npm run build:ui",
    "build:ui": "cd web && npm run build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "dev": "npm run kill --silent; tsx watch src/http-server.ts",
    "dev:http": "npm run dev",
    "dev:tunnel": "npm run kill:tunnel --silent; npm-run-all --parallel dev tunnel",
    "start": "npm run kill --silent; node dist/http-server.js",
    "start:http": "npm run start",
    "build:start": "npm run build && npm run start",
    "kill": "lsof -ti:${PORT:-3000} | xargs kill -9 2>/dev/null || true",
    "kill:tunnel": "pkill -f ngrok 2>/dev/null || true",
    "tunnel": "ngrok http ${PORT:-3000}",
    "inspect": "npx @modelcontextprotocol/inspector@latest http://localhost:${PORT:-3000}/mcp",
    "health": "curl -s http://localhost:${PORT:-3000}/health | jq .",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.13.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
